{
  "name": "battle-royale",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/grinry/battle-royale",
  "author": "Rytis Grincevicius <rytis.grincevicius@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/grinry/battle-royale/issues"
  },
  "homepage": "https://github.com/grinry/battle-royale#readme",
  "scripts": {
    "build:client": "webpack --prod",
    "build:server": "tsc -- tsconfig.server.json",
    "dev:server": "nodemon ./src/server/index.ts",
    "dev:client": "webpack --watch & http-server ./build/client",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --write **/*.{js,ts,tsx,css,scss}"
  },
  "dependencies": {
    "express": "^4.16.4",
    "socket.io": "^2.4.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^8.10.14",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "awesome-typescript-loader": "^5.2.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "pretty-quick": "^1.10.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "enzyme.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/enzyme.js",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/mocks.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
